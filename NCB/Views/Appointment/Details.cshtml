@model HMS.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Appointment Details</h1>
<hr />
<form method="post" class="mt-3">
    <div class="form-group row">
        <input asp-for= "PatientID" hidden   class="form-control" />
        <input asp-for= "AppointmentID" hidden   class="form-control" />
        <label asp-for="PatientName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input value="@Html.DisplayFor(model => model.PatientName)#@Html.DisplayFor(model => model.PatientID)" readonly="readonly"  class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for= "Date" readonly="readonly" type="date"  class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Time" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for= "Time" readonly="readonly" type="time"  class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DoctorName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for= "DoctorName" readonly="readonly"  class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for= "Description" readonly="readonly"  class="form-control"></textarea>
        </div>
    </div>
    <div class="btn-group text-right">
        @if(User.IsInRole("Doctor"))
        {
            <button asp-action="Complete" asp-route-id="@Model.AppointmentID" type="submit" class="btn btn-success">Complete</button> 
        }
        else
        {
            <a asp-action="Edit" asp-route-id="@Model.AppointmentID" class="btn btn-info">Edit</a> 
        }
    
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</form>


