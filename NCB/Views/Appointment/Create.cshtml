@model CreateAppointmentViewModel
@{
    ViewData["Title"] = "Create Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Create Appointment</h1>
<hr />

<form enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="PatientID" class="form-check-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="PatientID" class="form-control" />
        </div>
        <span asp-validation-for="PatientID" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Date" class="form-check-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Date" type="date" class="form-control" />
        </div>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Time" class="form-check-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="Time" type="time" min="08:00" max="17:00" class="form-control" />
        <span asp-validation-for="Time" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Doctor" class="form-check-label col-sm-2"></label>
        <div class="col-sm-10">
            <select asp-for="Doctor" class="custom-select">
                <option>Select One</option>
                @foreach(var item in ViewBag.DoctorSelection)
                {
                    <option value=@item.Value>@item.Text</option>
                }
            </select>
        </div>
        <span asp-validation-for="Doctor" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="form-check-label col-sm-2"></label>
        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
