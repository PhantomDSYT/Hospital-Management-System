@model CreatePatientViewModel

@{
    ViewData["Title"] = "Create Patient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Create Patient</h1>
<hr />
<form enctype="multipart/form-data" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="FirstName" class="form-check-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" />
        </div>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="form-check-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control" />
        </div>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Gender" class="form-check-label col-sm-2"></label>
        <div class="form-check col-sm-5">
            <label class="form-check-label">
                <input asp-for="Gender" type="radio" class="form-check-input text-center" value="Male"/>
                Male
            </label>
        </div>
        <div class="form-check col-sm-5">
            <label class="form-check-label">
                <input asp-for="Gender" type="radio" class="form-check-input text-center" value="Female"/>
                Female
            </label>
        </div>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="DateofBirth" class="form-check-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="DateofBirth" class="form-control" />
        </div>
        <span asp-validation-for="DateofBirth" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="form-check-label col-sm-2"></label>
        <div class="col-sm-10">
            <textarea asp-for="Address" class="form-control"></textarea>
        </div>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="TelephoneNumber" class="form-check-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="TelephoneNumber" class="form-control" />
        </div>
        <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Allergies" class="form-check-label col-sm-2"></label>
        <div class="col-sm-10">
            <textarea asp-for="Allergies" class="form-control"></textarea>
        </div>
        <span asp-validation-for="Allergies" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="PatientPicture" class="form-check-label col-sm-2"></label>
        <div class="custom-file col-sm-10">
            <input asp-for="PatientPicture" class="form-control custom-file-input" />
            <label class="custom-file-label">Choose File...</label>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            });
        });
    </script>
}
