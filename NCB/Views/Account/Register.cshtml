@model HMS.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Add USer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Add User</h1>

<div class="d-flex justify-content-center align-items-center h-100 flex-column">
    <div class="col-md-4 col-sm-8 text-center ">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="form-check-label"></label>
                <input asp-for="FirstName" class="form-control text-center"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-check-label"></label>
                <input asp-for="LastName" class="form-control text-center"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="form-check-label"></label>
                <textarea asp-for="Address" class="form-control text-center" rows="3"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="form-check-label"></label>
                <input asp-for="Email" class="form-control text-center"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-check-label"></label>
                <input asp-for="Password" class="form-control text-center"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-check-label"></label>
                <input asp-for="ConfirmPassword" class="form-control text-center"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
