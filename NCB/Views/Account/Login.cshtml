@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Employee Login</h1>
<hr />

<div class="d-flex justify-content-center align-items-center h-100 flex-column">
    <div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Email" class="form-check-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="form-check-label col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label asp-for="RememberMe" class="form-check-label">
                      <input asp-for="RememberMe" class="form-check-input" type="checkbox">
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <p class="small text-center">If you forgot your password please contact a system administrator for help</p>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>